<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :task %>
    <%= f.input :body %>
    <%= f.input :imagePC %>
    <%= f.input :imageTablet %>
    <%= f.input :imagePhone %>
    <%= f.input :link %>
    <%= f.association :client %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
