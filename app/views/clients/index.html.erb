<% provide(:title, 'Клиенты' ) %>

<div class="panel panel-primary">
<div class="panel-heading">

<h1>Клиенты</h1>

</div>
<div class="panel-body">

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Компания</th>
      <th>Сайт</th>
      <th>Телефон</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.company %></td>
        <td><%= client.site %></td>
        <td><%= client.phone %></td>
        <td><%= link_to 'Открыть', client %></td>
        <td><%= link_to 'Редактировать', edit_client_path(client) %></td>
        <td><%= link_to 'Удалить', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить клиента', new_client_path, class: 'btn btn-danger' %>

</div>
</div>
